                        <TextBox Width="300" PlaceholderText="Type job markup"  Text="{Binding NewJobMarkup, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                        <TextBox Width="300" PlaceholderText="Type job rooms for job"  Text="{Binding NewJobRoomsForJob, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                        <Button Content="Submit" Command="{Binding AddJobCommand}" x:Name="submitNewJobInfo"/>
                    </StackPanel>
                </Flyout>
            </Button.Flyout>
